---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   altText: string;
   width: number;
   height: number;
}

const { imagePath, altText, width, height } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/img/*/*.{jpeg,jpg,png,gif}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/img/*/*.{jpeg,jpg,png,gif}"`);
---

<Image src={images[imagePath]()} alt={altText} width={Number(width)} height={Number(height)} />