---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   imagePath: string;
   altText: string;
   width?: number;
   height?: number;
}

const { imagePath, altText, width, height } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*/*.{jpeg,jpg,png,gif}');
const locationImages = import.meta.glob<{ default: ImageMetadata }>('/src/assets/locations/*/*.{jpeg,jpg,png,gif}');
Object.assign(images, locationImages);
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/*/*/*.{jpeg,jpg,png,gif}"`);
---

<Image src={images[imagePath]()} alt={altText} width={Number(width)} height={Number(height)} />