---
import Title from '../Title.astro';
import Card from '../WorldCard.astro';

const cards = [
  {
    title: "Bono de bienvenida",
    description: "Al registrarte, recibirás tus primeros 16 WLD (tokens), en menos de 48 horas. Úsalos, cámbialos a soles o hazlos crecer,",
    image: "/world1.jpg",
    position: "right"
  },
  {
    title: "¿Qué es World ID?",
    description: "Para proteger tu privacidad y evitar el plagio, esta herramienta demuestra que eres único.",
    image: "/world2.jpg",
    position: "left"
  },
  {
    title: "¿Y mis datos?",
    description: "Un pasaporte digital seguro que garantiza tu privacidad y anonimato.",
    image: "/world3.jpg",
    position: "right"
  }
];
---
<section class="text-white py-16">
  <Title title="Beneficios" />
  <div class="container mx-auto grid grid-cols-1 gap-6 px-6">
    {cards.map((card) => (
      <Card {...card} />
    ))}
  </div>
</section>
