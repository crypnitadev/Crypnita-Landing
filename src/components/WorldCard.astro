---
export interface Props {
  title: string;
  description: string;
  position: string;
}

const {
  title,
  description,
  position = "left",
} = Astro.props as {
  title: string;
  description: string;
  position: "left" | "center" | "right";
};

const alignmentMap = {
  left: "md:text-left",
  center: "text-center",
  right: "md:text-right",
};

const alignment =
  alignmentMap[position as "left" | "center" | "right"] || alignmentMap.left;
---

<div class={`font-poppins text-white p-2 text-center ${alignment}`}>
  <h2 class="font-bold text-2xl md:text-[40px]">{title}</h2>
  <p class="mt-2 md:text-[24px]" set:html={description}></p>
</div>
