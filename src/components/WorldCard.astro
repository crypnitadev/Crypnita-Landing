---
export interface Props {
  title: string;
  description: string;
  image: string;
  position: string;
}

const { title, description, image, position = "left" } = Astro.props;
---

<div
  class={`font-poppins text-white p-6 text-center md:text-left ${position === "right" ? "md:text-right" : ""}`}
>
  <h2 class="text-2xl font-semibold">{title}</h2>
  <p class="mt-2">{description}</p>
</div>
